<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayoutMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff792f"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <ImageView
            android:id="@+id/titleLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/unnamed" />

        <TextView
            android:id="@+id/messageUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/checklistButton"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#543d2a"
            android:text="@string/checklist"
            android:textColor="#fbf5e4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/disasterButton"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#543d2a"
            android:text="@string/disasterplan"
            android:textColor="#fbf5e4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/inventoryButton"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#543d2a"
            android:text="@string/inventory"
            android:textColor="#fbf5e4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/memberButton"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#543d2a"
            android:text="@string/member"
            android:textColor="#fbf5e4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/emergencyButton"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#543d2a"
            android:text="@string/emergency"
            android:textColor="#fbf5e4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="#543d2a"
            android:text="@string/logout"
            android:textColor="#e7bb98"
            android:textSize="30dp" />
    </LinearLayout>

</ScrollView>